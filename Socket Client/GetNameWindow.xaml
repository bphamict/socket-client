<Window x:Class="Socket_Client.GetNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Socket_Client"
        mc:Ignorable="d"
        Title="Input your name" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBox Height="30" Name="Name_TextBox" TextBlock.LineHeight="24" TextBlock.LineStackingStrategy="BlockLineHeight" FontSize="14"/>
        <Button Content="Continue" Height="30" Margin="0 10 0 0" Click="Continue_Click" IsDefault="True"/>
    </StackPanel>
</Window>
